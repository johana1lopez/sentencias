/*punto12*/
var producto1 = parseInt(prompt("ingrese precio del primer producto"))
var producto2 = parseInt(prompt("ingrese precio del segundo producto"))
var producto3 = parseInt(prompt("ingrese precio del tercer producto"))
var modopago = prompt ("¿cual es su modo de pago? efectivo, cupón o crédito")
var valor_total;
valor_total =producto1+producto2+producto3;

if( modopago = efectivo){
   var efectivo = valor_total;
   document.write("el valor a pagar es" +valor_total);
}else if( modopago = cupon){
   var cupon = valor_total - (3/100);
   document.write("el valor a pagar es" +cupon);
}else if ( modopago = credito){
   var credito = valor_total + 0.5;
   document.write("el total a pagar es" +credito);
}


